<h1>Books</h1>

<% if user_signed_in? && current_user.admin? %>
  <%= link_to 'New Book', new_book_path, class: 'btn btn-primary mb-3' %>
<% end %>

<table class="table table-striped table-bordered">
  <thead class="thead-light">
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Price</th>
      <th>Stock Quantity</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td><%= book.price %></td>
        <td><%= book.stock_quantity %></td>
        <td><%= link_to 'Show', book, class: 'btn btn-info btn-sm' %></td>
        <% if user_signed_in? && current_user.admin? %>
          <td><%= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning btn-sm' %></td>
          <td><%= link_to 'Destroy', "/books/#{book.id}", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: 'btn btn-danger btn-sm' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back', root_path, class: 'btn btn-secondary' %>

