<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="card shadow-sm mt-4" style="border-color: #add8e6;">
    <div class="card-body" style="background-color: #e6f2ff;">
      <div class="form-group">
        <%= form.label :title, class: 'text-muted' %>
        <%= form.text_field :title, class: 'form-control', style: 'border-color: #add8e6;' %>
      </div>

      <div class="form-group">
        <%= form.label :author, class: 'text-muted' %>
        <%= form.text_field :author, class: 'form-control', style: 'border-color: #add8e6;' %>
      </div>

      <div class="form-group">
        <%= form.label :description, class: 'text-muted' %>
        <%= form.text_area :description, class: 'form-control', style: 'border-color: #add8e6;' %>
      </div>

      <div class="form-group">
        <%= form.label :price, class: 'text-muted' %>
        <%= form.number_field :price, step: :any, class: 'form-control', style: 'border-color: #add8e6;' %>
      </div>

      <div class="form-group">
        <%= form.label :stock_quantity, class: 'text-muted' %>
        <%= form.number_field :stock_quantity, class: 'form-control', style: 'border-color: #add8e6;' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
